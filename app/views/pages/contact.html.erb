<div class="container my-5 contact-page">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h1 class="card-title mb-4 text-center">Contactez-moi</h1>

          <% if notice %>
            <div class="alert alert-success">
              <i class="bi bi-check-circle-fill"></i>
              <%= notice %>
            </div>
          <% end %>

          <%= form_with url: contacts_path, method: :post, local: true do %>
            <div class="mb-3">
              <%= label_tag :name, "Votre nom", class: "form-label" %>
              <%= text_field_tag :name, nil, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= label_tag :email, "Votre email", class: "form-label" %>
              <%= email_field_tag :email, nil, required: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= label_tag :message, "Votre message", class: "form-label" %>
              <%= text_area_tag :message, nil, required: true, rows: 5, class: "form-control" %>
            </div>

            <%= submit_tag "Envoyer", class: "btn btn-primary w-100" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
