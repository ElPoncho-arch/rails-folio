<div class="container-fluid my-5">
  <h1>Contact</h1>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <%= form_with url: contacts_path, method: :post, local: true do %>
    <div class="mb-3">
      <%= label_tag :name, "Votre nom" %>
      <%= text_field_tag :name, nil, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag :email, "Votre email" %>
      <%= email_field_tag :email, nil, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag :message, "Votre message" %>
      <%= text_area_tag :message, nil, required: true, class: "form-control" %>
    </div>

    <%= submit_tag "Envoyer", class: "btn btn-primary" %>
  <% end %>

</div>
